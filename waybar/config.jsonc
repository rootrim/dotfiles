{
    "layer": "top",
    "modules-left": ["hyprland/mode", "hyprland/window"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": ["battery", "clock"],
    "sway/window": {
        "max-length": 50
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["", "", "", "", ""]
    },
    "clock": {
        "format-alt": "{:%a, %d. %b  %H:%M}"
    }
}
